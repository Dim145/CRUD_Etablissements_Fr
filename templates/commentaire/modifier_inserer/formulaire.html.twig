{% extends 'base.html.twig' %}

{% block title %}Modifier commentaire{% endblock %}

{% block body %}

    <h2>Modifier</h2>

    {% set classLabels ='labels' %}
    {% set classValues ='values' %}
    {% set classBoutons='bouton' %}

    {{ form_start(form, { 'attr': {'class': 'formulaire'}}) }}
    <table>
        <tr><td>{{ form_label(form.auteur       , "Auteur"          , {"label_attr": {"class": classLabels}}) }}</td><td>{{ form_widget(form.auteur       , {'attr': {'class': classValues}}) }}</td></tr>
        <tr><td>{{ form_label(form.date_creation, "Date de cr√©ation", {"label_attr": {"class": classLabels}}) }}</td><td>{{ form_widget(form.date_creation, {'attr': {'class': classValues}}) }}</td></tr>
        <tr><td>{{ form_label(form.note         , "Note"            , {"label_attr": {"class": classLabels}}) }}</td><td>{{ form_widget(form.note         , {'attr': {'class': classValues}}) }}</td></tr>
        <tr><td>{{ form_label(form.texte        , "Texte"           , {"label_attr": {"class": classLabels}}) }}</td><td>{{ form_widget(form.texte        , {'attr': {'class': classValues}}) }}</td></tr>
        <tr><td>{{ form_label(form.uai2         , "UAI"             , {"label_attr": {"class": classLabels}}) }}</td><td>{{ form_widget(form.uai2         , {'attr': {'class': classValues}}) }}</td></tr>
    </table>
    <div class="centrer centrerBouton">{{ form_widget(form.save, {"attr": {"class": classBoutons}}) }}</div>
    {{ form_end(form) }}

{% endblock %}